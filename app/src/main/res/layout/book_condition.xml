<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本の状態"
            android:id="@+id/textView2"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rCondition">

                <!--<RadioButton-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="ほぼ新品"-->
                    <!--android:id="@+id/cond_likebrandnew"-->
                    <!--android:textSize="11dp"-->
                    <!--android:textColor="@android:color/black" />-->

                <!--<RadioButton-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="非常に良い"-->
                    <!--android:id="@+id/cond_verygood"-->
                    <!--android:singleLine="false"-->
                    <!--android:textSize="11dp"-->
                    <!--android:textColor="@android:color/black" />-->

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="良い"
                    android:id="@+id/cond_excellent"
                    android:textSize="11dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/book_icon_excellent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通"
                    android:id="@+id/cond_good"
                    android:checked="true"
                    android:textSize="11dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/book_icon_good" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汚れあり"
                    android:id="@+id/cond_bad"
                    android:textSize="11dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/book_icon_bad" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="その他状態"
            android:id="@+id/textView3"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帯あり"
                android:id="@+id/chkBand"
                android:textSize="11dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/black" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日焼け・変色"
                android:id="@+id/chkSunburned"
                android:textSize="11dp"
                android:layout_weight="0.4"
                android:textColor="@android:color/black" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="スレ・傷など"
                android:id="@+id/chkScratched"
                android:textSize="11dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="たばこ臭"
                android:id="@+id/chkCigarSmell"
                android:textSize="11dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/black" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ペットを飼っている"
                android:id="@+id/chkPetSmell"
                android:textSize="11dp"
                android:layout_weight="0.4"
                android:textColor="@android:color/black" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="カビ臭"
                android:id="@+id/chkMoldSmell"
                android:textSize="11dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="サイズ"
                android:id="@+id/textView6"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="縦"
                    android:id="@+id/textView7"
                    android:textSize="12dp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:inputType="numberDecimal"
                    android:numeric="decimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm × 横"
                    android:id="@+id/textView8"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:inputType="numberDecimal"
                    android:numeric="decimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm × 厚さ"
                    android:id="@+id/textView9"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText3"
                    android:inputType="numberDecimal"
                    android:numeric="decimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:id="@+id/textView12"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重さ"
                android:id="@+id/textView10"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"
                    android:inputType="numberDecimal"
                    android:numeric="decimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="書き込み線"
            android:id="@+id/textView13"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rLined">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし"
                    android:id="@+id/rLine_no"
                    android:textSize="11dp"
                    android:checked="true"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5P未満"
                    android:id="@+id/rLine_5"
                    android:textSize="11dp"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5P以上 10P未満"
                    android:id="@+id/rLine_5_10"
                    android:textSize="11dp"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10P以上"
                    android:id="@+id/rLine_10over"
                    android:textSize="11dp"
                    android:textColor="@android:color/black" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ページの折れ"
            android:id="@+id/textView14"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rBroken">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし"
                    android:id="@+id/rBroken_no"
                    android:textSize="11dp"
                    android:checked="true"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5P未満"
                    android:id="@+id/rBroken_5"
                    android:textSize="11dp"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5P以上 10P未満"
                    android:id="@+id/rBroken_5_10"
                    android:textSize="11dp"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10P以上"
                    android:id="@+id/rBroken_10over"
                    android:textSize="11dp"
                    android:textColor="@android:color/black" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="備考"
            android:id="@+id/textView15"
            android:textStyle="bold"
            android:textIsSelectable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtNote" />
    </LinearLayout>

</LinearLayout>
