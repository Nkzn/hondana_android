<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F0EE" >

    <!--本を交換する-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="ホンダナは、お家に眠っている本を登録することで\nもらえるポイント「ブク」を使って\n読みたい本と交換することができます。"
        android:id="@+id/textView19" />

    <!--区切り線-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:background="#E6E5E1"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip"
        android:layout_marginBottom="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1.まずは本を登録しましょう"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView16"
        android:textColor="#F26964"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="お手持ちの本を登録してみましょう。\n交換に使うポイント「ブク」がもらえます。\n\n最初の1冊目を登録すると、\nホンダナから皆様に1ブクを\nプレゼントしています。\n以降は10冊登録するごとに1ブクがもらえます。"
        android:id="@+id/textView17"
        android:textSize="17sp" />

    <!--区切り線-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:background="#E6E5E1"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="12dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2.交換をリクエストしましょう"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView18"
        android:textColor="#F26964"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="お手持ちの本を登録してみましょう。\n交換に使うポイント「ブク」がもらえます。\n\n最初の1冊目を登録すると、\nホンダナから皆様に1ブクを\nプレゼントしています。\n以降は10冊登録するごとに1ブクがもらえます。"
        android:id="@+id/textView20"
        android:textSize="17sp" />


</LinearLayout>